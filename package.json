{
  "name": "minesweeper",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "homepage": "https://lucas98sf.github.io/react-minesweeper",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "tsc && vite build",
    "lint": "bunx @biomejs/biome check --apply-unsafe ./src",
    "deploy:pages": "gh-pages -d dist",
    "deploy": "pnpm run build && pnpm run deploy:pages",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.39.7",
    "express": "^4.18.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unplugin-fonts": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.17",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^4.5.2",
    "vitest": "^0.29.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": "bunx @biomejs/biome check --apply",
    "*.{js,css,md}": "bunx @biomejs/biome check --apply"
  }
}
